<Application x:Class="onewater.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="App_Startup">
    <Application.Resources>
        
        <!-- 加载样式、控件等资源 -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/res/ColTitle.xaml" />
                <ResourceDictionary Source="/res/ImageButton.xaml" />
                <ResourceDictionary Source="/res/WindowStyle.xaml" />
                <ResourceDictionary Source="/res/ButtonStyle.xaml" />
                <ResourceDictionary Source="/res/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
